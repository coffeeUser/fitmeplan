@model Fitmeplan.IdentityServer.Quickstart.Account.ForgotPasswordViewModel

<!--Change inputs classes if Model is not valid-->
@{
    var invalid = "";
    if (ViewContext.ModelState.IsValid == false)
    {
        invalid = "invalid";
    }
}

    <form asp-route="ForgotPassword" class="aim-form">
        <h3 class="aim-form__title">Forgot your password?</h3>
        <p class="aim-form__text">We'll email you with a link to reset your password.</p>
        <label asp-for="Email" class="aim-form__label">Please enter your email address:</label>
        <input asp-for="Email" class="aim-form__input @invalid" placeholder="Email" autofocus>
        <!--Error message-->
        <partial name="_ValidationSummary" />
        <!--Error message-->
        <button type="submit" name="button" value="send-email" class="aim-form__submit">Send Email</button>
    </form>