@model RedirectViewModel
<div class="aim-content">
    <p class="aim-form__text">The password has been successfully changed.</p>
    @if (Model.IsMobileClient)
    {
        <p class="aim-form__text">Please go to the login screen in your mobile app to sign in with your new password.</p>
    }
    else
    {
        <p class="aim-form__text">Please go to the <a href="@Model.RedirectUrl">Login page</a> to sign in with your new password.</p>
    }
</div>